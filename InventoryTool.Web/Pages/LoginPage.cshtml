@page
@model InventoryTool.Web.Pages.LoginPageModel
@{
    if (HttpContext.User.Identity.IsAuthenticated)
    {
        Response.Redirect("/Forms");
    }
}
<div class="bg-black text-light" style="height:90vh;">
    <div class="container-fluid" style="height:90vh;">
        <div class="row h-100 d-flex align-content-center">
            <div class="col-4">
                <form method="post">
                    <div class="mb-3">33333
                        <label for="" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="" name="Email">
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Password</label>
                        <input type="password" class="form-control" name="Password" id="">
                        <span class="text-danger"></span>
                    </div>
                    <div class="justify-content-between d-flex">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#ForgotPass">Forgot Password?</button>
                    </div>

                </form>
            </div>

            

        </div>
    </div>
    <div class="modal fade" id="ForgotPass" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-black">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Reset Password</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form>
                    <div class="modal-body">

                        <div class="mb-3">
                            <label class="form-label">Enter your email address</label>
                            <input type="email" class="form-control">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Send Reset Link</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
